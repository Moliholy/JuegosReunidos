            android:layout_height="wrap_content"
            android:alpha="1"
            android:text="7" />

        <Button
            android:id="@+id/boton_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:text="8" />

        <Button
            android:id="@+id/boton_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
